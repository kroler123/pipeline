#!groovy
// Check properties
properties([disableConcurrentBuilds()])

pipeline {
	agent {
		label 'master'
	}
	options {
		buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
		timestamps()
		skipStagesAfterUnstable()
	}
	stages {
		stage("first step") {
			steps {
				sh 'ssh root@10.20.2.20 \'hostname\''
			}
		}
		stage("Second step") {
			steps {
				sh 'hostname'
			}
		}
		stage("Three step") {
			steps {
				junit 'reports/**/*.xml'
			}
		}
	}
}
